ALGORITHM orthogonalvectors
VAR
    v1, v2: ARRAY[5];
    sum: INTEGER
BEGIN
     REPEAT
        Write("enter v1 and v2")
    UNTIL (v1.length = v2.length)
dot_product(v1, v2, sum)
    IF (sum = 0) THEN
        Write("v1 and v2 are orthogonal")
    ELSE
       Write("v1 and v2 are not orthogonal")
    END_IF
END
